<div class="row" id="sign_up">
  <h1>Sugn up!</h1>
  <%= form_for @admin , :class => "form" do |f| %>
  <div class="form-group">
    <%= label_tag 'name', 'Username' %><br>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= label_tag 'password', 'password' %><br>
    <%= f.password_field :password %>
  </div>
  <div class="form-group">
    <%= label_tag 'password', 'confirm parrsord' %><br>
    <%= f.password_field :password_conformation %>
  </div>
    <%= f.submit 'Sign up', class: 'btn btn-success'  %>
  <% end %>

  <h4> <%= link_to "Back", root_path %>  </h4>
</div>

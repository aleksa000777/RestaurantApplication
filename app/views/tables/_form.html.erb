<%= form_for @table do |f| %>
  <%= f.label :name, "name" %>
  <%= f.text_field :name %><br>
  <%= f.label :shape, "shape of table" %>
  <%= f.text_field :shape %><br>
  <%= label :status, "free" %>
  <%= f.radio_button :status, true , :checked => true , :value => "free" %><br>
  <%= label :status, "occupaed"%>
  <%= f.radio_button :status, false, :value => "occupaed" %><br>
  <%= f.label :location, "location" %>
  <%= f.text_field :location %><br>

  <%-# Server: <%= current_server.name <br> -%>
  <%= f.submit 'add', class: 'btn btn-success'%>

<% end %>


